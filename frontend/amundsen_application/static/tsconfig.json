{
  "compilerOptions": {
    "lib": ["es5", "es2015", "dom", "scripthost"],
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "esnext",
    "target": "es2015",
    "jsx": "react",
    "typeRoots": [
     "node_modules/@types"
    ],
    "allowJs": true,
    "moduleResolution": "node",
    "noResolve": false,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "types": ["jest"],
    "baseUrl": "js",
    "paths": {
        "components/*": [ "components/*" ],
        "config/*": [ "config/*" ],
        "ducks/*": [ "ducks/*" ],
        "interfaces/*": [ "interfaces/*" ],
    }
  },
  "exclude": [
    "node_modules",
    "**/__tests__",
  ],
  "include": [
    "*.ts",
    "*.js",
    ".eslintrc.js",
    "js/"
  ]
}
